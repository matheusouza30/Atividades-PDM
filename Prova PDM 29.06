import 'package:flutter/material.dart';
import 'package:aula/perguntas.dart';

void main() {
  runApp(ComponenteInicial());
}

class ComponenteInicial extends StatefulWidget {
  @override
  State<ComponenteInicial> createState() => _ComponenteInicialState();
}

class _ComponenteInicialState extends State<ComponenteInicial> {
  var contador = 0;
  var cont = 0;
  List<Widget> botoes = [];

  final perguntas = [
    "Você tem irmão?",
    "Você é maior de idade",
    "Qual seu prato favorito?",
    "Prefere vôlei ou futebol?"
  ];

  void eventobotao() {
    setState(() {
      contador++;
    });
    print(contador);
  }

  void criarbt() {
    setState(() {
      cont++;
      botoes.add(ElevatedButton(
        onPressed: eventobotao,
        child: Text("Botão $cont"),
      ));
    });
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: Text("Perguntas e respostas!"),
        ),
        body: Column(
          children: [
            Column(
              children: [
                Perguntas(perguntas[contador]),
                ElevatedButton(onPressed: eventobotao, child: Text("Um irmão")),
                ElevatedButton(onPressed: eventobotao, child: Text("Dois irmãos")),
                ElevatedButton(onPressed: eventobotao, child: Text("Três irmãos ou mais")),
                ElevatedButton(onPressed: eventobotao, child: Text("Nenhum irmão")),
                TextField(
                  decoration: InputDecoration(labelText: 'digite sua resposta'),
                ),
                ElevatedButton(onPressed: criarbt, child: Text("Criar botão")),
              ],
            ),
            Column(
              children: botoes,
            ),
          ],
        ),
      ),
    );
  }
}
